// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch for development",
			"type": "npm",
			"script": "start",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "build for development",
			"dependsOn": "clean project",
			"type": "npm",
			"script": "build",
			"problemMatcher": "$tsc",
			"group": "build"
		},
		{
			"label": "clean project",
			"type": "npm",
			"script": "clean",
			"group": "build"
		},
		{
			"label": "build for production",
			"type": "npm",
			"script": "build:production",
			"group": "build"
		}
	]
}
